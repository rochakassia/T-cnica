//1) Programa de verificação de sequência de Fibonacci
def fibonacci(n):
    a, b = 0, 1
    while a <= n:
        if a == n:
            return True
        a, b = b, a + b
    return False

# Número para verificar
numero = int(input("Informe um número: "))

if fibonacci(numero):
    print(f"O número {numero} pertence à sequência de Fibonacci.")
else:
    print(f"O número {numero} NÃO pertence à sequência de Fibonacci.")
//2) Programa para contar ocorrências da letra 'a' (maiúscula ou minúscula)
def contar_a(s):
    return s.lower().count('a')

# String para verificar
string = input("Informe uma string: ")

quantidade = contar_a(string)
print(f"A letra 'a' aparece {quantidade} vezes na string informada.")
//3) Qual será o valor da variável SOMA?
int INDICE = 12, SOMA = 0, K = 1;
enquanto K < INDICE faça {
    K = K + 1;
    SOMA = SOMA + K;
}
imprimir(SOMA);
